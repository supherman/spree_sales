<% content_for :page_title do %>
  <%= Spree.t(:listing_sales) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_product_link">
    <%= button_link_to Spree.t(:new_sale), new_object_url, {  :icon => 'icon-plus', :id => 'admin_new_sale' } %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<table class="index" id="listing_sales">
  <colgroup>
    <col style="width: 20%">
    <col style="width: 20%">
    <col style="width: 20%">
    <col style="width: 20%">
    <col style="width: 20%">
  </colgroup>
  <thead>
  <tr data-hook="option_header">
    <th><%= Spree.t(:sku) %></th>
    <th><%= Spree.t(:sale_type) %></th>
    <th><%= Spree.t(:sale_value) %></th>
    <th><%= Spree.t(:sale_active) %></th>
    <th class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @sales.each do |sale| %>
    <tr class="spree_sale <%= cycle('odd', 'even')%>" id="<%= spree_dom_id sale %>" data-hook="sale_row">
      <td><%= sale.variant.sku %></td>
      <td><%= sale.to_s %></td>
      <td><%= sale.value %></td>
      <td><%= sale.active? %></td>
      <td class="actions">
        <%= link_to_edit(sale, :class => 'admin_edit_sale', :no_text => true) %>
        <%= link_to_delete(sale, :no_text => true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
